<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="#FFFFFF"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/bg_login_footer"
        android:layout_width="700dp"
        android:layout_height="700dp"
        android:layout_marginBottom="-325dp"
        android:contentDescription="@string/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bg_login" />

    <ImageView
        android:id="@+id/bg_login_header"
        android:layout_width="700dp"
        android:layout_height="700dp"
        android:layout_marginStart="-180dp"
        android:layout_marginTop="-550dp"
        android:contentDescription="@string/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_login" />

    <TextView
        android:id="@+id/masuk_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/text"
        android:fontFamily="@font/balsamiqsans"
        android:text="@string/masuk_akun"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bg_login_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.313" />

    <TextView
        android:id="@+id/halo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/text"
        android:fontFamily="@font/balsamiqsans"
        android:text="@string/halo"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_login_header"
        app:layout_constraintEnd_toEndOf="@+id/masuk_akun"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/masuk_akun"
        app:layout_constraintTop_toBottomOf="@+id/masuk_akun"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/halo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/text"
        android:fontFamily="@font/balsamiqsans"
        android:text="@string/alamat_email"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/et_email"
        app:layout_constraintEnd_toEndOf="@+id/et_email"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_email" />

    <TextView
        android:id="@+id/halo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/text"
        android:fontFamily="@font/balsamiqsans"
        android:text="@string/massukkan_password"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/et_password"
        app:layout_constraintEnd_toEndOf="@+id/et_password"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_password" />

    <TextView
        android:id="@+id/teks1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="23dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/text"
        android:fontFamily="@font/balsamiqsans"
        android:text="@string/masuk_dengan_akun_google"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/btn_lanjut" />

    <Button
        android:id="@+id/btn_ke_daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="152dp"
        android:background="?android:attr/selectableItemBackground"
        android:foreground="?android:attr/selectableItemBackground"
        android:contentDescription="@string/text"
        android:fontFamily="@font/balsamiqsans"
        android:text="@string/tidak_punya_akun_daftar"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/btn_lanjut" />

    <Button
        android:id="@+id/lupa_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:background="?android:attr/selectableItemBackground"
        android:foreground="?android:attr/selectableItemBackground"
        android:contentDescription="@string/text"
        android:fontFamily="@font/balsamiqsans"
        android:text="@string/lupa_kata_sandi"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/et_password"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/et_password"
        app:layout_constraintTop_toBottomOf="@+id/et_password" />

    <ImageButton
        android:id="@+id/btn_lanjut"
        android:layout_width="364dp"
        android:layout_height="50dp"
        android:layout_marginTop="72dp"
        android:background="?android:attr/selectableItemBackground"
        android:foreground="?android:attr/selectableItemBackground"
        android:contentDescription="@string/button"
        android:text="@string/lanjut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bg_login_footer"
        app:srcCompat="@drawable/btn_yellow" />

    <TextView
        android:id="@+id/lanjut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:fontFamily="@font/balsamiqsans"
        android:text="@string/lanjut"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_lanjut"
        app:layout_constraintEnd_toEndOf="@+id/btn_lanjut"
        app:layout_constraintStart_toStartOf="@+id/btn_lanjut"
        app:layout_constraintTop_toTopOf="@+id/btn_lanjut" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="364dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/edittext"
        android:contentDescription="@string/text"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="2dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_login_header"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="364dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/edittext"
        android:contentDescription="@string/text"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="2dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        tools:ignore="LabelFor" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="83dp"
        android:layout_height="20dp"
        android:layout_marginTop="35dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/text"
        app:layout_constraintStart_toStartOf="@+id/btn_lanjut"
        app:layout_constraintTop_toBottomOf="@+id/lanjut"
        app:srcCompat="@drawable/line" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="83dp"
        android:layout_height="20dp"
        android:layout_marginTop="35dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/text"
        app:layout_constraintEnd_toEndOf="@+id/btn_lanjut"
        app:layout_constraintTop_toBottomOf="@+id/lanjut"
        app:srcCompat="@drawable/line" />

    <ImageView
        android:id="@+id/btn_google"
        android:layout_width="364dp"
        android:layout_height="50dp"
        android:backgroundTint="#00FFFFFF"
        android:foreground="?android:attr/selectableItemBackground"
        android:contentDescription="@string/text"
        app:layout_constraintBottom_toTopOf="@+id/btn_ke_daftar"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/teks1"
        app:srcCompat="@drawable/edittext" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="135dp"
        android:contentDescription="@string/text"
        app:layout_constraintBottom_toBottomOf="@+id/btn_google"
        app:layout_constraintStart_toStartOf="@+id/btn_google"
        app:layout_constraintTop_toTopOf="@+id/btn_google"
        app:srcCompat="@drawable/ic_google" />

    <TextView
        android:id="@+id/teks3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/text"
        android:fontFamily="@font/balsamiqsans"
        android:text="@string/google"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_google"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/btn_google" />

</androidx.constraintlayout.widget.ConstraintLayout>